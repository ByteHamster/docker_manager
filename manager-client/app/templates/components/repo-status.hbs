<td>
  {{#if @repo.official}}
    <img class="check-circle" src={{this.officialRepoImageSrc}} alt="Official Plugin" title="Official Plugin">
  {{/if}}
</td>

<td>
  <a href="{{@repo.url}}">{{@repo.name}}</a>
  <span class="current commit-hash">{{@repo.prettyVersion}}</span>
</td>

<td>
  {{#if @repo.checkingStatus}}
    Checking for new version...
  {{else if @repo.upToDate}}
    Up to date
  {{else}}
    <div class='new-version'>
      <h4>New Version Available!</h4>

      <ul>
        <li>Remote Version: <span class="new commit-hash">{{@repo.prettyLatestVersion}}</span></li>
        <li>Last Updated:
          {{#if @repo.latest.date}}
            {{moment-from-now @repo.latest.date interval=1000}}
          {{else}}
            &mdash;
          {{/if}}
        </li>
        <li class='new-commits'>{{new-commits @repo.latest.commits_behind @repo.version @repo.latest.version @repo.url}}</li>
      </ul>

      {{#if @repo.upgrading}}
        <button type="button" class="btn" {{on "click" this.upgrade}}>Currently Upgrading...</button>
      {{else}}
        <button type="button" class="upgrade-button btn" {{on "click" this.upgrade}} disabled={{this.upgradeDisabled}}>Upgrade</button>
      {{/if}}
    </div>
  {{/if}}
</td>
