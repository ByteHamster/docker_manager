<div class="container">
  <div class="back-site">
    <a href={{this.returnToSiteUrl}}>Return to site</a>
  </div>

  <header class="container">
    <LinkTo @route="index"><img src={{this.logoUrl}} class="logo" alt="Discourse"></LinkTo>
    <h1><LinkTo @route="index">Upgrade</LinkTo></h1>
  </header>

  <div class="container">
    {{#if this.showBanner}}
      <div id="banner">
        <div id="banner-content">
          <a href="#" class="close" {{on "click" this.dismiss}}>
            <i class="fa fa-times" title="Dismiss this banner."></i>
          </a>

          {{#each this.banner as |row|}}
            <p>{{row}}</p>
          {{/each}}
        </div>
      </div>
    {{/if}}

    <ul class="nav nav-tabs">
      <LinkTo @route="index" @tagName="li" class="nav-item">
        <LinkTo @route="index" class="nav-link">Versions</LinkTo>
      </LinkTo>

      <LinkTo @route="processes" @tagName="li" class="nav-item">
        <LinkTo @route="processes" class="nav-link">Processes</LinkTo>
      </LinkTo>

      <li class="nav-item">
        <a class="nav-link" href={{this.backupsUrl}}>Backups</a>
      </li>
    </ul>

    {{outlet}}
  </div>
</div>
